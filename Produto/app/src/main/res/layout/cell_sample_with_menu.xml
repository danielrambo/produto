<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="@dimen/font_size_cell"
        android:textStyle="bold"
        android:layout_margin="@dimen/forms_margin_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/app_bar_icon_back_width"
        android:layout_height="@dimen/app_bar_icon_back_height"
        android:src="@drawable/ic_outher_black"
        android:textSize="@dimen/cell_with_checkbox_textView_font_size"
        android:layout_marginTop="@dimen/cell_with_checkbox_margin_top"
        android:layout_marginRight="@dimen/forms_margin_all"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>